<%= form_for @call do |f| %>
  <p>
    <%= f.label :requested_floor %>
    <%= f.select :requested_floor, (1..10).to_a %>
  </p>

  <p>
    <%= f.label :direction %>
    <%= f.radio_button :direction, "up", { checked: true } %> 
    <%= f.label :direction_up, "up" %>
    <%= f.radio_button :direction, "down" %> 
    <%= f.label :direction_down, "down" %>
  </p>

  <%= f.submit %>
<% end %>